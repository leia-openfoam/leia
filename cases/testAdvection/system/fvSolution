FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    psi 
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0;
    }
}

PISO
{
    nCorrectors     -1; // Disables p-v coupling.
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}

velocityModel
{
    type rotation; 
    omega (1 0 0);
    point (0.5 0.5 0.5);
    oscillation off;
}

levelSet
{
    implicitSurface 
    {
        type slottedSphere; 
        minSlotCorner (0.2 0.475 0.2);
        maxSlotCorner (0.8 0.525 0.735);
    }

    phaseIndicator
    {
        type geometric;
    }

    redistancer 
    {
        type noRedistancing;
    }
}


