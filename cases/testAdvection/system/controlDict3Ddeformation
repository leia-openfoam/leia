FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     leiaLevelSetFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         3;

// CFL = 0.5
// Ncells = 64

timeStep #calc "0.5 / (2 * 64)"; 

deltaT          $timeStep; 

writeControl    timeStep;

writeInterval   #calc "floor(0.1 * 3.0 / $timeStep)";

purgeWrite      0;

writeFormat     ascii;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

// ************************************************************************* //
