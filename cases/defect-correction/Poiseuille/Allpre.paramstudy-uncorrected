#!/bin/sh
cd "${0%/*}" || exit                                # Run from this directory
. ${WM_PROJECT_DIR:?}/bin/tools/RunFunctions        # Tutorial run functions
#------------------------------------------------------------------------------

python3 ../create-study.py -c Poiseuille \
	-p Poiseuille-uncorrected.parameter \
	-s convergence-study-uncorrected 2>&1 | tee log.create-study-uncorrected

pyFoamRunParameterVariation.py --list-variations Poiseuille \
	Poiseuille-uncorrected.parameter 2>&1 | tee Poiseuille-uncorrected.variations

#------------------------------------------------------------------------------
