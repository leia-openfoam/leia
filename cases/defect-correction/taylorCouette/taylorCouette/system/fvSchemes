FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
}

linear Gauss linear;
upwind Gauss upwind; 
boundedLinearUpwind  bounded Gauss linearUpwind grad(U);
upwindDefCorr2ndOrder GausssDefCorr upwindSecondOrderDefCorr;

divSchemes
{
    default         $linear;
    div(phi,U)      $linear; 
    div((nuEff*dev2(T(grad(U))))) $linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}


