FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    innerWall
    {
        type rotatingWallVelocity;
        origin (0 0 0); 
        axis (0 0 1); 
        omega 1;
    }
    outerWall
    {
        type            fixedValue;
	    value		uniform (0 0 0);
    }
    frontAndBack
    {
        type            empty;
    }
}


