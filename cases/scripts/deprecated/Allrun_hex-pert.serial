#!/usr/bin/env bash

./Allclean && \
touch "$(basename ${PWD}).foam" && \
foamJob eval '\
  rm -rf 0 && cp -r 0.org 0 && \
  find 0/ -name "*.template" -delete && \
	blockMesh && leiaPerturbMesh && cp -r 0/polyMesh/ constant/ && \
	rm -rf 0/polyMesh && leiaSetFields && \
	{
	./system/init_End/init_End.serial ; \
	leiaLevelSetFoam 
	}'
