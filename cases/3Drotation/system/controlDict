FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     leiaLevelSetFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         6.283185307179586;

// Maximal velocity in the rotation around an axis for a unit-cube domain is sqrt(0.5^2 + 0.5^2)
// A global CFL is set based on this maximal global velocity 
// CFL = 0.5
// N cells in coordinate axis direction (unit domain) = 64 
deltaTinitial   #eval "$endTime / floor($endTime / ( 0.5 / (64 * 0.7071067811865476)))"; 

writeInterval   #eval "floor(0.1 * ($endTime / $deltaTinitial))";

deltaT          #eval "$endTime / (10 * $writeInterval)"; 

writeControl    timeStep;

purgeWrite      0;

writeFormat     ascii;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

#include "fobjects";
// ************************************************************************* //
